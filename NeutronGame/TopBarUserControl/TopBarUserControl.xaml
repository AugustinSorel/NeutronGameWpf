<UserControl x:Class="NeutronGame.TopBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeutronGame"
             mc:Ignorable="d" 
             Background="#2f3640"
             d:DesignHeight="20" d:DesignWidth="500">
    <Grid>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Ellipse Fill="Red" Grid.Row="0" Height="10" Width="10" HorizontalAlignment="Right" Margin="5, 0, 5, 0"/>

            <Ellipse Fill="Yellow" Grid.Row="0" Height="10" Width="10" HorizontalAlignment="Right" Margin="5, 0, 5, 0"/>
        </StackPanel>
    </Grid>
</UserControl>
